<div class="flex flex-col">
  <h1 class="text-3xl font-bold"><%= @restaurant.name %></h1>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>
  <div class="w-full bg-slate-200 h-[1px] my-2"></div>

  <% @restaurant.reviews.each do |review| %>
    <div class="flex flex-col gap-4 bg-slate-200 p-4 rounded-md w-1/2 my-4">
      <h3 class="text-xl">Rating: <span class="font-bold text-md"><%= review.rating %>/5</span></h3>
      <p>Review: <%= review.content %></p>
    </div>
  <% end %>

  <div class="w-full bg-slate-200 h-[1px] my-2"></div>



  <%= link_to "Back", restaurants_path, class: "text-blue-500" %>
  <%= link_to "Edit", edit_restaurant_path(@restaurant), class: "text-blue-500" %>
  <%= button_to "Delete", restaurant_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500" %>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "text-green-500" %>
  <%= link_to "See reviews", restaurant_reviews_path(@restaurant), class: "text-green-500" %>
</div>
